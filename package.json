{
  "name": "claude-code-gateway",
  "version": "1.0.0",
  "private": true,
  "description": "HTTP gateway for Claude Code CLI with optional TypeScript SDK",
  "repository": {
    "type": "git",
    "url": "https://github.com/pattern-zones-co/claude-code-gateway.git"
  },
  "workspaces": [
    "packages/*",
